cat $1 | awk '$6-$2 > 100' | cut -f1-6 > file1
cat $2 | awk '$6-$2 > 100' | cut -f1-6 > file2

#cat $1/deletions.bedpe $1/tandemDuplications.bedpe $1/inversions.bedpe $1/insertions.bedpe $1/unknowns.bedpe | awk '$6-$2 > 100' | cut -f1-6 > file1
#cat $2/deletions.bedpe $2/tandemDuplications.bedpe $2/inversions.bedpe $2/insertions.bedpe $2/unknowns.bedpe | awk '$6-$2 > 100' | cut -f1-6 > file2

bedtools pairtopair -type both -is -slop $3 -a file1 -b file2 | cut -f1-6 | sort | uniq | wc -l
wc -l file1
wc -l file2
